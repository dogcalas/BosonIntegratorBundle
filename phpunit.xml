<phpunit
        backupGlobals               = "false"
        backupStaticAttributes      = "false"
        colors                      = "true"
        convertErrorsToExceptions   = "true"
        convertNoticesToExceptions  = "true"
        convertWarningsToExceptions = "true"
        processIsolation            = "false"
        stopOnFailure               = "false"
        syntaxCheck                 = "false"
        bootstrap                   = "Tests/vendor/bootstrap.php">
        <testsuites>
            <testsuite name="Locator">
            <directory>Tests/Locator</directory>
        </testsuite>
    </testsuites>
</phpunit>